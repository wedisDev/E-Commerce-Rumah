<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">1

        <TextView
            android:layout_width="match_parent"
            android:text="Detail Rumah"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_detail_gambar"
            android:layout_width="match_parent"
            android:paddingTop="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_detail_status"
            android:layout_width="wrap_content"
            android:paddingTop="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_detail_pemilik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_detail_pembeli"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_detail_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_detail_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_detail_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_detail_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

      <TextView
            android:id="@+id/tv_detail_tgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:background="@color/brown2"
            android:text="Beli"
            android:layout_margin="10dp"
            android:id="@+id/btn_detail_beli"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>